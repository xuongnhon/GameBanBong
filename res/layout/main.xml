<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.likeapp.sukudo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
	<ImageView
        android:id="@+id/ImageViewBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bg" />

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageViewBackground"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
    </RelativeLayout>
	
    <Button
        android:id="@+id/ButtonChoiGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/textchoigamegreen" />
    
    <Button
        android:id="@+id/ButtonDiemCao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ButtonChoiGame"
        android:layout_below="@+id/ButtonChoiGame"
        android:layout_marginTop="10dp"
        android:background="@drawable/textdiemcaogreen" />
    
    <Button
        android:id="@+id/ButtonCaiDat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ButtonDiemCao"
        android:layout_below="@+id/ButtonDiemCao"
        android:layout_marginTop="10dp"
        android:background="@drawable/textcaidatgreen" />

    <Button
        android:id="@+id/ButtonThoatGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ButtonCaiDat"
        android:layout_below="@+id/ButtonCaiDat"
        android:layout_marginTop="10dp"
        android:background="@drawable/textthoatgamegreen" />
    
</RelativeLayout>