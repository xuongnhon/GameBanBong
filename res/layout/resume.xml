<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.likeapp.sukudo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ImageViewBackGroundResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/resumebg" />

        <Button
            android:id="@+id/ButtonTiepTuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/texttieptucgreen" />
        
        <Button
            android:id="@+id/ButtonVeMenuChinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ButtonTiepTuc"
            android:layout_below="@+id/ButtonTiepTuc"
            android:layout_marginTop="10dp"
            android:background="@drawable/textvemenuchinhgreen" />
        
        <Button
            android:id="@+id/ButtonCaiDatResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ButtonVeMenuChinh"
            android:layout_below="@+id/ButtonVeMenuChinh"
            android:layout_marginTop="10dp"
            android:background="@drawable/textcaidatgreen" />

    </RelativeLayout>

</RelativeLayout>